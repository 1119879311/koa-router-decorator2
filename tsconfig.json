{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "target": "es2017",
    "declaration": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "allowJs": true,
    "sourceMap": false,     
    "outDir": "lib",  // TS文件编译后会放入到此文件夹内
    "baseUrl": ".",
  },
  "include": [
    "test/**/*",
    "src/**/*",
  ]
}
